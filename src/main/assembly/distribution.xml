<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>${project.artifactId}-${project.version}</baseDirectory>

  <fileSets>
    <fileSet>
      <outputDirectory>/bin</outputDirectory>
      <directory>sh</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>command/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>conf/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>groovy/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>groovy-script/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>lib</outputDirectory>
      <directory>target</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*javadoc.jar</exclude>
        <exclude>*sources.jar</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>/lib</outputDirectory>
      <excludes>
                <!-- ↓不要な依存ライブラリを除去↓ -->
        <exclude>org.apache.camel:*</exclude>
        <exclude>org.elasticsearch:*</exclude>
        <exclude>com.hmsonline:*</exclude>
                <!-- ↑不要な依存ライブラリを除去↑ -->
      </excludes>
      <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>false</unpack>
      <scope>system</scope>
      <outputDirectory>/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
